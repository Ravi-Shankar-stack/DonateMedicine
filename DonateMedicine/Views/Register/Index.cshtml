@model DonateMedicine.Models.Register
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string errorMessage = ViewBag.errorMessage;
}

<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-success">Register</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Index">
                        <div class="form-group">
                            <input asp-for="Username" placeholder="Username" class="form-control" type="text" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input asp-for="Password" placeholder="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input asp-for="Age" placeholder="Age" class="form-control" type="number" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label id="Gender">Gender</label>
                            <select asp-for="Gender" class="form-control" id="Gender">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input asp-for="Address" class="form-control" type="text" placeholder="Address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <div id="message">@errorMessage</div>
                        </div>
                        <br />
                        <div class="form-group">
                            <button value="Register" type="submit" id="Register" class="btn btn-success btn-group-sm">Register</button>
                        </div>
                        <a href="/login" class="text-primary small">Login</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>