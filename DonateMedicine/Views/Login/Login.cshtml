@model DonateMedicine.Models.Register
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string errorMessage = ViewBag.errorMessage;
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-success">Login</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Login">
                        <div class="form-group">
                            <input placeholder="Username" asp-for="Username" type="text" id="UserName" />
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="password" asp-for="Password" placeholder="Password" id="password" />
                        </div>
                        <br />
                        <div class="form-group">
                            <button class="btn btn-block btn-primary">Login</button>
                        </div>
                        <br />
                        <div class="form-group">
                            <div id="message">@errorMessage</div>
                        </div>
                        <br />
                        <a href="/register">Register</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
