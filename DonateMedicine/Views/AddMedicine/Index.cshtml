@model DonateMedicine.Models.Medicine
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string errorMessage = ViewBag.errorMessage;
}

<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-success">Add Medicine Details</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Index">
                        
                        <div class="form-group">
                            <input asp-for="Name" placeholder="Name" class="form-control" type="text" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input asp-for="Category" placeholder="Category" class="form-control" type="text" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input asp-for="Quantity" placeholder="Quantity" class="form-control" type="number" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                                <div id="message">@errorMessage</div>
                        </div>
                        <br />
                        <div class="form-group">
                            <button  class="btn btn-success btn-group-sm">Add Medicine</button>
                        </div>
                       
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
