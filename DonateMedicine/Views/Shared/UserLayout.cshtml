@{
    Layout = "_Layout";
    string loggedInUser = "";
    if(TempData.Peek("loggedInUsername") != null)
    {
        loggedInUser = TempData.Peek("loggedInUsername").ToString();
    }
}

<style>
    .button {
        background-color: #04AA6D;
        border: none;
        color: white;
        padding: 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 4px 2px;
    }

    .button3 {
        border-radius: 8px;
    }

    .navbar{
        display : flex;
        align-items: center;
        justify-content: flex-end;
        height: 40px;
    }

</style>
<div>
    <div class="navbar">
        <div>
            <label id=" welcomeUserName">Logged In User: </label>
            @loggedInUser
        <br />
            <a href="/userhome">Home</a>
            <a href="/login">Logout</a>
        </div>
    </div>
    @RenderBody()
</div>