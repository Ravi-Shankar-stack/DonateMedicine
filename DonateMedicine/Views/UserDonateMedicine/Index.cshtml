@model  DonateMedicine.Models.Donation
@{
    ViewData["Title"] = "userDonateMedicine";
    Layout = "~/Views/Shared/UserLayout.cshtml";
    string errorMessage = ViewBag.errorMessage;
}

<div>
    <h3 class="text-dark">
        <label>Donate Medicine</label>

    </h3>

    <form asp-action="Index" method="post">
        <input asp-for="MedicineCategory" type="text" placeholder="Medicine Category" id="medCategory" />
        <input asp-for="MedicineName" type="text" placeholder="Medicine Name" id="donateMedName" />
        <input asp-for="DonationQuantity" type="text" placeholder="Quantity" id="quantity" />
        <button id="submitDonate" type ="submit" class="btn btn-info">Submit</button>
        <br />
        <div>@errorMessage</div>
    </form>
</div>

