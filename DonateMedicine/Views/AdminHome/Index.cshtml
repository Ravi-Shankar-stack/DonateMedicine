@{
    ViewData["Title"] = "adminhome";
    //List<Medicine> allMedicines = ViewBag.allMedicines as List<Medicine>;
    string loggedInUser = "";
    if (TempData.Peek("loggedInUsername") != null)
    {
        loggedInUser = TempData.Peek("loggedInUsername").ToString();
    }
}
<style>
    .button {
        background-color: #04AA6D;
        border: none;
        color: white;
        padding: 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 4px 2px;
    }
    .button3 {
        border-radius: 8px;
    }
    tr,th{
        border : 1px solid black;
        min-width: 250px;
    }
    .navbar {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        height: 40px;
    }
</style>
<div>
    <a class="button button3 btn-primary" asp-action="Index" asp-controller="AddMedicine">Add Medicine Details</a>
    <a class="button button3 btn-primary" asp-action="Index" asp-controller="AdminViewDonations">View All User Donate Data</a>
    <a class="button button3 btn-primary" asp-action="Index" asp-controller="AdminViewRequests">View all user Request Data</a>
</div>
<div class="navbar">
    <div>
        <label id=" welcomeUserName">Logged In User: </label>
        @loggedInUser
        <a href="/userhome">Home</a>
        <a href="/login">Logout</a>
    </div>
</div>
<h3 class=" text-dark">Available Medicine details</h3>
<div>
    <table>
        <thead>
            <tr>
                <th>Medicine Id</th>
                <th>Medicine Name</th>
                <th>Medicine Category</th>
                <th>Medicine Quantity</th>
            </tr>
        </thead>
